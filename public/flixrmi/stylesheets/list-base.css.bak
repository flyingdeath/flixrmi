.flimList {
  position: absolute;
  padding-left: 0px;
}

.flimTitle{
  max-height:100px;
  width:572px;
}

.flimItem,
.actors_list,
.directors_list{
  list-style-type:none;
}

.flimInfo{
    display: inline-block;
}

/*-----------------------------------------------------------------------------------------*/
/*-----------------------------------------------------------------------------------------*/


.ThumbNone .BoxArtLarge,
.ThumbNone .BoxArtMedium,
.ThumbNone .BoxArtSmall{
  display:none;
}

.ThumbSmall .BoxArtLarge,
.ThumbSmall .BoxArtMedium{
  display:none;
}

.ThumbMedium .BoxArtLarge,
.ThumbMedium .BoxArtSmall{
  display:none;
}

.ThumbMedium .BoxArtLarge,
.ThumbMedium .BoxArtSmall{
}


/*-------------------------------*/
/*-------------------------------*/
.BoxArtLarge,
.BoxArtMedium,
.BoxArtSmall{
 text-align:center;
}

.ThumbLarge .BoxArtMedium,
.ThumbLarge .BoxArtSmall{
  display:none;
}

/*-------------------------------*/

/*-----------------------------------------------------------------------------------------*/
/*-----------------------------------------------------------------------------------------*/


.ThumbLarge  li.flimItem:hover .BoxArtLarge,
.ThumbMedium li.flimItem:hover .BoxArtMedium,
.ThumbSmall  li.flimItem:hover .BoxArtSmall{
  display:none;
}

.ThumbHoverLarge  li.flimItem:hover .BoxArtLarge,
.ThumbHoverMedium li.flimItem:hover .BoxArtMedium,
.ThumbHoverSmall  li.flimItem:hover .BoxArtSmall{
  display:block;
}

